{
  "name": "sub-size-me",
  "version": "1.0.0",
  "description": "New Electron app",
  "main": "./dist/main.js",
  "scripts": {
    "w:dev:electron": "webpack --config webpack.electron.config.js --mode development && set NODE_ENV=development && electron .",
    "w:dev:react": "webpack serve --config webpack.react.config.js --mode development && set NODE_ENV=development",
    "w:dev": "concurrently \"npm run w:dev:react\" \"npm run w:dev:electron\"",
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
    "dev:react": "NODE_ENV=development webpack-dev-server --config webpack.react.config.js --mode development",
    "build:electron": "NODE_ENV=production webpack --config webpack.electron.config.js --mode production",
    "build:react": "NODE_ENV=production webpack --config webpack.react.config.js --mode production",
    "build": "npm run build:electron && npm run build:react",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "caiomarqs",
  "license": "ISC",
  "build": {
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "productName": "SubSizeMe",
    "appId": "com.subsizeme.app",
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.12.1",
    "@types/fluent-ffmpeg": "^2.1.16",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "css-loader": "^5.0.1",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.0",
    "node-sass": "^5.0.0",
    "sass": "^1.29.0",
    "sass-loader": "^10.0.5",
    "style-loader": "^2.0.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
